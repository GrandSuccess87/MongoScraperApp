<!-- Modal -->
<div class="modal fade noteModal" id="noteModal{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="noteModalLabel">Article Notes for: {{this.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{#if this.notes}}
            {{#each this.notes}}
              <div class="panel panel-primary">
                <div class="panel-body">
                    <p class='oldNotes'>{{this.body}}</p>
                    <button type='button' class='btn btn-danger deleteNote' data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
                </div>
            </div>
            {{/each}}
            {{else}}
             <div class="panel panel-warning">
                    <div class="col-lg-12">
                    <div class="panel-body">
                    <h4>Uh Oh. Looks like there are no notes for this article yet!</h4>
                    </div>
                    </div>
            {{/if}}
            <div class="form-group">
                <textarea id="noteText{{this._id}}" class="form-control" rows="8" placeholder="Please Add a New Note"></textarea>
            </div>

            </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>